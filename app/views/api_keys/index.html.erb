<h1>Listing api_keys</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Name</th>
      <th>Type api</th>
      <th>Api key</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @api_keys.each do |api_key| %>
      <tr>
        <td><%= api_key.user_id %></td>
        <td><%= api_key.name %></td>
        <td><%= api_key.type_api %></td>
        <td><%= api_key.api_key %></td>
        <td><%= link_to 'Show', api_key %></td>
        <td><%= link_to 'Edit', edit_api_key_path(api_key) %></td>
        <td><%= link_to 'Destroy', api_key, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'Send test mail', email_send_mail_path %></td>
        
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Api key', new_api_key_path %>
